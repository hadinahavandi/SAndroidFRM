<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.AboutUsFragment"
    android:padding="10dp"
    android:paddingTop="60dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_speciality_medical"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="پزشکی" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_speciality_dentist"
                android:layout_below="@id/btn_speciality_medical"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="دندان پزشکی" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_speciality_psychology"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_below="@id/btn_speciality_dentist"
                android:text="روانشناسی" />

        </RelativeLayout>


    </LinearLayout>
</ScrollView>
    <!-- TODO: Update blank fragment layout -->


</RelativeLayout>
