<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="65dp">
<TextView
android:id="@+id/lbl_start_time_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Start_time:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_start_time_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Start_time"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_start_time_caption"
/>
<TextView
android:id="@+id/lbl_end_time_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_start_time_caption"
android:text="End_time:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_end_time_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_start_time_content"
android:text="End_time"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_end_time_caption"
/>
<TextView
android:id="@+id/lbl_doctor_fid_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_end_time_caption"
android:text="Doctor_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_doctor_fid_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_end_time_content"
android:text="Doctor_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_doctor_fid_caption"
/>        
</RelativeLayout>