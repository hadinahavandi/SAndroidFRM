<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="65dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<ImageView
android:id="@+id/lbl_thumbnail_flu_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:text="Thumbnail_flu"
android:textColor="#333"
android:layout_centerHorizontal="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
/>

        <TextView
            android:id="@+id/lbl_title_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@id/lbl_thumbnail_flu_content"
            android:text="عنوان:"
            android:textColor="#333"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/lbl_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@id/lbl_thumbnail_flu_content"
            android:text=""
            android:textColor="#333"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/lbl_title_caption"
            />
<TextView
android:id="@+id/lbl_add_date_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_thumbnail_flu_content"
android:text="Add_date:"
android:textColor="#333"
    android:visibility="gone"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_add_date_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_thumbnail_flu_content"
android:text="Add_date"
    android:visibility="gone"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_add_date_caption"
/>
<TextView
android:id="@+id/lbl_description_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_title_caption"
android:text="توضیحات:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_description_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_title_content"
android:text=""
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_description_caption"
/>
<TextView
android:id="@+id/lbl_price_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_description_content"
android:text="قیمت:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_price_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_description_content"
android:text="0"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_price_caption"
/>
<TextView
android:id="@+id/lbl_filecount_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_price_caption"
android:text="تعداد فایل های درون فایل زیپ:"
android:textColor="#333"
    android:visibility="gone"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_filecount_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_price_content"
android:text="0"
android:textColor="#333"
    android:visibility="gone"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_filecount_caption"
/>
<TextView
android:id="@+id/lbl_role_systemuser_fid_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_filecount_caption"
android:text="Role_systemuser_fid:"
android:textColor="#333"
    android:visibility="gone"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_role_systemuser_fid_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_filecount_content"
android:text="Role_systemuser_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
    android:visibility="gone"
android:layout_toLeftOf="@id/lbl_role_systemuser_fid_caption"
/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lbl_filecount_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backwardbutton"
                android:visibility="gone"
                android:src="@drawable/backward"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buybutton"
                android:visibility="gone"
                android:src="@drawable/buy2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playbutton"
                android:visibility="gone"
                android:src="@drawable/play"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pausebutton"
                android:visibility="gone"
                android:src="@drawable/pause"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fastforwardbutton"
                android:visibility="gone"
                android:src="@drawable/fastforward"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

</RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>