<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginTop="65dp">
<TextView
android:id="@+id/lbl_title_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Title:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_title_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Title"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_title_caption"
/>
<TextView
android:id="@+id/lbl_speciality_fid_caption"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_title_caption"
android:text="Speciality_fid:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/lbl_speciality_fid_content"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/lbl_title_content"
android:text="Speciality_fid"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/lbl_speciality_fid_caption"
/>        
</RelativeLayout>