<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<TextView
android:id="@+id/namelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Name:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_alignParentTop="true"
android:text="Name"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/namelabel"
/>
<TextView
android:id="@+id/familylabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/namelabel"
android:text="Family:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/family"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/namelabel"
android:text="Family"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/familylabel"
/>
<TextView
android:id="@+id/born_datelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/familylabel"
android:text="Born_date:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/born_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/familylabel"
android:text="Born_date"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/born_datelabel"
/>
<TextView
android:id="@+id/mobilelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/born_datelabel"
android:text="Mobile:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/mobile"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/born_datelabel"
android:text="Mobile"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/mobilelabel"
/>
<TextView
android:id="@+id/device_idlabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/mobilelabel"
android:text="Device_id:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/device_id"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/mobilelabel"
android:text="Device_id"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/device_idlabel"
/>
<TextView
android:id="@+id/emaillabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/device_idlabel"
android:text="Email:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/email"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/device_idlabel"
android:text="Email"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/emaillabel"
/>
<TextView
android:id="@+id/ismalelabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/emaillabel"
android:text="Ismale:"
android:textColor="#333"
android:layout_alignParentRight="true"
/>
<TextView
android:id="@+id/ismale"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="@dimen/text_margin"
android:textAppearance="?attr/textAppearanceListItem"
android:layout_below="@id/emaillabel"
android:text="Ismale"
android:textColor="#333"
android:layout_centerHorizontal="true"
android:layout_toLeftOf="@id/ismalelabel"
/>        
</RelativeLayout>
</android.support.v7.widget.CardView>