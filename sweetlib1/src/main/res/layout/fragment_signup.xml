<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.LoginFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:id="@+id/pagebg"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <TextView
        android:id="@+id/lblmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="موبایل" />

    <EditText
        android:id="@+id/txtmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtusername"
        android:layout_below="@+id/lblmobile"
        android:ems="10"
        android:gravity="center"
        android:hint="موبایل"
        android:inputType="number"
        android:maxLength="11"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtmobile"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="نام و نام خانوادگی" />
    <EditText
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblname"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="نام و نام خانوادگی"
        android:maxLength="25"/>
    <TextView
        android:id="@+id/lblusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtname"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="نام کاربری" />
    <EditText
        android:id="@+id/txtusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblusername"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="نام کاربری"
        android:maxLength="25" />

    <TextView
        android:id="@+id/lblpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtusername"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="کلمه عبور" />
    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblpassword"
        android:ems="10"
        android:inputType="textWebPassword"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="کلمه عبور"
        android:maxLength="10" />

    <TextView
        android:id="@+id/lblpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtpassword"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:text="تکرار کلمه عبور" />
    <EditText
        android:id="@+id/txtpassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textWebPassword"
        android:layout_below="@+id/lblpassword2"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="تکرار کلمه عبور"
        android:maxLength="10" />

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpassword2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark"
        android:text="عضویت"
        android:textColor="@android:color/background_light" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressbar"/>

</RelativeLayout>
</RelativeLayout>
